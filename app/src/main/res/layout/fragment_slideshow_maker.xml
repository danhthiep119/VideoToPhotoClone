<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.SlideshowMakerFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/GvFolder"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:numColumns="3"
            android:id="@+id/GvImage"
            app:layout_constraintTop_toBottomOf="@+id/GvFolder"
            app:layout_constraintBottom_toTopOf="@+id/GvSelected"
            android:stretchMode="columnWidth"
            />
        <GridView
            android:id="@+id/GvSelected"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:numColumns="3"
            app:layout_constraintBottom_toTopOf="@+id/btnClear"
            />
        <Button
            android:id="@+id/btnClear"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/ClearAll"
            android:textColor="#FFFFFF"
            android:background="#ED4545"
            />
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            style=""
            android:text="@string/Create"
            app:layout_constraintTop_toTopOf="@+id/btnClear"
            app:layout_constraintLeft_toLeftOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>